<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/size5"
        android:padding="@dimen/size10"
        android:text="@string/modify_remark"
        android:textColor="@color/text_white"
        android:textSize="@dimen/textSize20" />


    <EditText
        android:id="@+id/et_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size30"
        android:background="@drawable/background_edittext_input"
        android:padding="@dimen/size10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size1"
            android:layout_marginTop="@dimen/size1"
            android:layout_weight="1"
            android:background="@drawable/button_dialog"
            android:text="@string/ok"
            android:textSize="@dimen/textSize20" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size1"
            android:layout_weight="1"
            android:background="@drawable/button_dialog"
            android:text="@string/cancel"
            android:textSize="@dimen/textSize20" />
    </LinearLayout>

</LinearLayout>
